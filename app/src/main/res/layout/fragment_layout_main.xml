<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".93"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <com.daimajia.swipe.SwipeLayout
                    android:id="@+id/swipt_registry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:id="@+id/btn_registry_list"
                        android:layout_width="128dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccentDark"
                        android:padding="10dp">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textStyle="bold"

                            android:textColor="@color/White"
                            android:text="@string/btn_registry_list"/>

                </RelativeLayout>
                <include layout="@layout/block_registry_info"/>


            </com.daimajia.swipe.SwipeLayout>

            <include layout="@layout/block_insurance_info"/>

            <com.daimajia.swipe.SwipeLayout
                    android:id="@+id/swipe_building"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:clickable="true">
                <include layout="@layout/button_list_building_layout"/>
                <include layout="@layout/block_building_info"/>

            </com.daimajia.swipe.SwipeLayout>

            <include layout="@layout/block_recipe_info"/>
            <include layout="@layout/block_analys_info"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10"
            android:background="@color/colorAccentDark"
            android:elevation="4dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"

                    android:textColor="@color/White"
                    android:text="@string/btn_register_in_med"/>

    </RelativeLayout>

</LinearLayout>

